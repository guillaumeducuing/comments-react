{
  "name": "comments-react",
  "version": "1.0.2",
  "description": "A React component to add comments with Firebase support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"postcss src/index.css -o dist/index.css --watch\"",
    "build": "tsc && postcss src/index.css -o dist/index.css && cp -r ./src/assets ./dist",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guillaumeducuing/comments-react.git"
  },
  "homepage": "https://github.com/guillaumeducuing/comments-react#readme",
  "keywords": [
    "react",
    "comments",
    "firebase",
    "component"
  ],
  "author": "Guillaume Ducuing",
  "license": "MIT",
  "peerDependencies": {
    "firebase": "11.0.2",
    "react": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "leo-profanity": "^1.7.0",
    "moment": "2.30.1"
  },
  "devDependencies": {
    "@types/leo-profanity": "1.5.4",
    "@types/react": "^17.0.0",
    "autoprefixer": "10.4.20",
    "concurrently": "9.1.2",
    "postcss": "8.5.1",
    "postcss-cli": "11.0.0",
    "tailwindcss": "3.4.17",
    "typescript": "^4.0.0"
  }
}
